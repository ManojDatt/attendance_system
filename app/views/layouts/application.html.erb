<!DOCTYPE html>
<html>
<head>
  <title>Arka|Attendance|System</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style type="text/css">
    .form-control:focus {
      border-color: #66afe9;
      outline: 0;
      -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 0px rgba(102, 175, 233, .6);
      box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 0px rgba(102, 175, 233, .6);
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <%= link_to "Mark Attendance", root_path, class: "navbar-brand" %>


      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <ul class="nav navbar-nav">

          <% if current_developer %>
        </ul>
        <ul class="nav navbar-nav navbar-right">

          <li>
            <%= link_to "Log Out", destroy_developer_session_path , method: :delete%>
          </li>
        </ul>

        <%end%>
      </div>
    </div>
  </nav>
  <% if notice.present? %>
  <script>
    Lobibox.notify('success', {
      position:'top right',
      delay: 5000,  
      delayIndicator: true,
      sound:false,
      msg: "<%= notice %>"
    });
  </script>
  <% end%>
  <div class="nav-side-menu">
    <div class="brand">Arka Softwares<span class="badge pull-right">Developer</span></div>
    <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>
    <div class="menu-list">
        <ul id="menu-content" class="menu-content collapse out">
            <li>
                <a href="#">
                     <%=link_to"Developer Dashboard", root_path%><span class="arrow"></span>
                </a>
            </li>
            <li >
                <% if punch_out?%>
                <i class="fa fa-user fa-lg"></i>
                <%=link_to"Punch-Out", punch_out_path%><span class="arrow"></span>
                <% end %> 
            </li>
           

            <li data-toggle="collapse" data-target="#new" class="collapsed">
            <i class="fa fa-user fa-lg"></i>
                <a href="#"><i class="fa fa-user fa-lg"></i> To Do <span class="arrow"></span></a>
            </li>
            <ul class="sub-menu collapse" id="new">
                <li>Today Task</li>
                <li>R & D</li>
                
            </ul>
            <li>
                <a href="#">
                    <i class="fa fa-user fa-lg"></i> Profile<span class="arrow"></span>
                </a>
            </li>
           <!--  <li>
                <a href="#">
                    <i class="fa fa-users fa-lg"></i> Users<span class="arrow"></span>
                </a>
            </li> -->
        </ul>
    </div>
</div>
<div class="container" id="main">
    <div class="row">
        <div class="col-md-12">
            <h4>
            <% if current_developer.present?%>
            <h1 class="alt-1">4h 18m 3s</h1>
            <%=timer_counter%>
            <% end %>
            </h4>
        </div>
    </div>
</div>
  <div class="container">

    <%= yield %>
  </div>
  <script type="text/javascript">
    $("#price_form_btn").click(function(){
      $("#price_form_id").submit();
    });
    $('.number').keypress(function(event) {
      if ((event.which != 46 || $(this).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57)) {
        event.preventDefault();
      }
    });
  </script>
  <% flash.each do |key, value| %>
  <script>
    Lobibox.notify('<%= key %>', {
      delay: 5000,  
      delayIndicator: true,
      msg: "<%= value %>"
    });
  </script>


  <% end %>

</body>
</html>
