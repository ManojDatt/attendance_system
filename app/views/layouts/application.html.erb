<!DOCTYPE html>
<html>
<head>
  <title>Arka|Attendance|System</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style type="text/css">
    .form-control:focus {
      border-color: #66afe9;
      outline: 0;
      -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 0px rgba(102, 175, 233, .6);
      box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 0px rgba(102, 175, 233, .6);
    }
  </style>
  
</head>

<body>

  <div class="container">

    <%= yield %>
  </div>
  

  <script type="text/javascript">
    $("#price_form_btn").click(function(){
      $("#price_form_id").submit();
    });
    $('.number').keypress(function(event) {
      if ((event.which != 46 || $(this).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57)) {
        event.preventDefault();
      }
    });
    
  </script>
  <% flash.each do |key, value| %>
  <script>
    Lobibox.notify('info', {
      title:"Arka Softwares",
      delay: 5000,  
      delayIndicator: true,
      msg: "<%= value %>",
      icon: false,
      sound:false
    });
  </script>


<% end%>
<%=notice%>
<% if notice.present? %>
  <script>
    Lobibox.alert('warning', {
      title:"Arka Softwares",
      delay: 5000,  
      delayIndicator: true,
      msg: "<%= notice %>",
      icon: false,
      sound:false
    });
  </script>
<% end%>

</body>
</html>
