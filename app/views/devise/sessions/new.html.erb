<div class="card card-container">
  <img id="profile-img" class="profile-img-card" src="/assets/logo.png" />
  <p id="profile-name" class="profile-name-card"></p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label 'Email or Username' %><br />

        <%= f.text_field :login, autofocus: true, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br />

        <%= f.password_field :password, autocomplete: "off" ,class:"form-control"%>
    </div>
    <% if devise_mapping.rememberable? -%>

      <div id="remember" class="checkbox">
        <label>
          <%= f.check_box :remember_me %> Remember me
          </label>
      </div>

      <% end -%>

        <div class="actions text-center">
          <%= f.submit "Log in", class:'btn btn-lg btn-primary btn-block btn-signin' %>
        </div>
        <% if flash.present? %>
          <br>
          <div class="alert alert-danger fade in" id="flash_error">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%=flash.first[1]%>
          </div>
          <% end %>
            <% end %>

</div>




<script>
  $(document).ready(function() {
    $(".alert").delay(2000).slideUp(200, function() {
    });
 
  
  $("#new_developer").validate({
            rules: {            
                "developer[login]": {
                    required: true
                },

                "developer[password]": {
                    required: true
                },

            },
            messages:{

                "developer[login]": {
                    required: "Please enter email or username."
                },

                "developer[password]": {
                    required: "Please enter password."
                },

            },
            submitHandler: function(form) {
                form.submit();
            }

        });
     });
</script>
